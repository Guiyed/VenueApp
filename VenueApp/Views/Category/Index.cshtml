@model List<VenueApp.Models.EventCategory>

@{
    ViewBag.Title = " List of Categories";
}

<h1>@ViewBag.Title</h1>

@if (ViewBag.Message.Length > 0)
{
    <p class="text-success">@ViewBag.Message<span class="glyphicon glyphicon-ok " aria-hidden="true"></span></p>
}
else if (ViewBag.ErrorMessage.Length > 0)
{
    <p class="text-danger">@ViewBag.ErrorMessage <span class="glyphicon glyphicon-remove " aria-hidden="true"></span></p>
}

<ul class="list-group">

    @foreach (var category in Model)
    {
        <li class="list-group-item">ID = @category.ID: <b>@category.Name</b> &nbsp; @(category.Protected ? "(Protected)" : "")</li>
    }
</ul>


@if (Model.Count == 0)
{
    <p>No Categories yet!</p>
}

<p><a asp-controller="Category" asp-action="Add">Add </a> | <a asp-controller="Category" asp-action="Remove">Remove</a></p>