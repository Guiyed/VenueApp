@model List<VenueApp.Models.EventCategory>

@{
    ViewBag.Title = " List of Categories";
}

<h1>@ViewBag.Title</h1>

<ul class="list-group">

    @foreach (var category in Model)
    {
        <li class="list-group-item">ID = @category.ID: <b>@category.Name</b> &nbsp; @(category.Protected ? "(Protected)" : "")</li>
    }
</ul>


@if (Model.Count == 0)
{
    <p>No Categories yet!</p>
}

    <p><a asp-controller="Category" asp-action="Add">Add </a> | <a asp-controller="Category" asp-action="Remove">Remove</a></p>