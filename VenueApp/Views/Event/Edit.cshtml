@model VenueApp.ViewModels.EditEventViewModel
@{
    ViewBag.Title = "Edit Event " + Model.Name + "(id=" + Model.EventID + ")";
}

<h1>@ViewBag.Title</h1>

<form asp-controller="Cheese" asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" value="@Model.Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>
    </div>

    <input type="submit" value="Edit Cheese" />
    <input type="hidden" name="EventID" value="@Model.EventID" />

</form>
