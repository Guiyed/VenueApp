@model List<VenueApp.Models.Event>

@{
    ViewBag.Title = "Events Index";

    @using Microsoft.AspNetCore.Http
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    string userType = @HttpContextAccessor.HttpContext.Session.GetString("Type") ?? "";
}

<h1>@ViewBag.Title</h1>

<h2>List of Events on Database</h2>
@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>

        </tr>
        @foreach (var evento in Model)
        {
        <tr>
            <td><a asp-controller="Event" asp-action="Detail" asp-route-userId="@evento.ID">@evento.Name</a></td>
            <td>@evento.Description</td>
            <td>@evento.Category.Name</td>            
            <td><a asp-controller="Event" asp-action="Edit" asp-route-cheeseId="@evento.ID">edit</a></td>
        </tr>
        }
    </table>
}

<p><a asp-controller="Event" asp-action="Add">Add</a> | <a asp-controller="Event" asp-action="Remove">Remove</a></p>
